  body
  
   main.errors
    h3 Update errors page daily -  #{moment}
    table.table
      tr
        th Site
        th Status
      if(errors.length > 0)
        each url in errors 
          tr
            th #{url}
            th errors
      else 
        tr
          th All pages working fine!!
          th OK
   
